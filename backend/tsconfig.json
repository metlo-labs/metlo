{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "public/favicon/*.png",
    "public/robots.txt",
    ".env",
    "models/**/*.ts",
  ],
  "exclude": ["node_modules", "src/http", "src/tests"]
}

